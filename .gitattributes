# Auto detect text files and perform LF normalization
* text=auto

# Explicitly define line endings for specific file types
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.config text eol=crlf
*.md text eol=crlf
*.txt text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
# Ensure shell scripts use LF (for cross-platform compatibility)
*.sh text eol=lf
*.bash text eol=lf
# Ensure PowerShell files use CRLF (Windows standard)
*.ps1 text eol=crlf
*.psm1 text eol=crlf
# Batch files must use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
# Git LFS configuration for large binary files
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.pdb filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.docx filter=lfs diff=lfs merge=lfs -text
*.rtf filter=lfs diff=lfs merge=lfs -text
# Additional binary files that don't need LFS (smaller files)
*.gif binary
*.so binary
*.dylib binary
*.png !text !filter !merge !diff
*.jpg !text !filter !merge !diff
*.jpeg !text !filter !merge !diff
*.exe !text !filter !merge !diff
*.ico !text !filter !merge !diff
*.bmp !text !filter !merge !diff
*.psd !text !filter !merge !diff
*.ai !text !filter !merge !diff
*.pdf !text !filter !merge !diff
*.xlsx !text !filter !merge !diff
*.docx !text !filter !merge !diff
*.rtf !text !filter !merge !diff
*.pdb !text !filter !merge !diff
*.dll !text !filter !merge !diff
