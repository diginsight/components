  //      "Authority": "https://login.microsoftonline.com/common/"
  //    }
  //  }
  //},
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com",
    "ClientId": "", // Environment specific
    "TenantId": "common"
  }
