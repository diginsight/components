{
  "AzureKeyVault": {
    "ClientId": "", // Project specific
    "TenantId": "", // Project specific
    "Uri": "", // Environment specific
    "ClientSecret": "" // Key Vault
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Diginsight.SmartCache.Externalization.ServiceBus": "Warning",
      "*.BodyLoggingHandler": "Debug"
    }
  },
  "OpenTelemetry": {
    "AzureMonitorConnectionString": "", // Environment-specific
    "ActivitySources": [
      "Azure.Cosmos.Operation",
      "Azure.Storage.Blobs.BlobBaseClient",
      "Microsoft.AspNetCore",
      "Diginsight.*",
      "AuthenticationSampleApi"
    ],
    "Meters": [
      "AuthenticationSampleApi"
    ],
    "ExcludedHttpHosts": [
      "login.microsoftonline.com",
      ".documents.azure.com",
      ".applicationinsights.azure.com",
      ".monitor.azure.com",
      ".b2clogin.com"
    ],
    "DurationMetricTags": [
      "category_name",
      "plant_id",
      "plant_type",
      "plant_name",
      "plant_company",
      "device_type",
      "user_company"
    ]
  },
  "Diginsight": {
    "Activities": {
      "ActivitySources": [
        "Azure.Cosmos.Operation",
        "Azure.Storage.Blobs.BlobBaseClient",
        "Microsoft.AspNetCore",
        "System.Net.Http",
        "Diginsight.*",
        "AuthenticationSampleApi"
      ],
      "NonLoggedActivityNames": [
        "SmartCache.OnEvicted",
        "SmartCache.SetValue",
        "Operation.query_items",
        "System.Net.Http",
        "System.Net.Http.HttpRequestOut",
        "Microsoft.AspNetCore.Hosting.HttpRequestIn",
        "SecretClient.GetSecret",
        "Azure.Core.Http.Request"
      ]
    },
    "SmartCache": {
      "MaxAge": "00:05",
      //"MaxAge@...": "00:01",
      //"MaxAge@...": "00:10",
      "AbsoluteExpiration": "1",
      "SlidingExpiration": "04:00",
      "ServiceBus": {
        "ConnectionString": "", // Key Vault
        "TopicName": "smartcache-commonapi"
      }
    }
  },
  "Observability": {
    "ConsoleEnabled": false,
    "Log4NetEnabled": true,

    "LogRequestBody": false,
    "LogResponseBody": false,
    "Analysis": {
      "EnvironmentVariables": [ "OS", "ASPNETCORE_ENVIRONMENT", "DOTNET_ENVIRONMENT", "AppsettingsEnvironmentName", "COMPUTERNAME" ],
      "BaseUrl": "https://localhost:7100"
    }
  },
  "FeatureManagement": {
  },
  "AppSettings": {
  },
  "AllowedHosts": "*",
  "IsSwaggerEnabled": true,

  "SwaggerAuthentication": {
    "Authority": "https://login.microsoftonline.com/common/",
    "Scope": "", // Environment specific
    "WebAppClientId": "" // Environment specific
  },
  //"Authentication": {
  //  "Schemes": {
  //    "Bearer": {
  //      "ValidAudience": "", // Environment specific
  //      "Authority": "https://login.microsoftonline.com/common/"
  //    }
  //  }
  //},
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com",
    "ClientId": "", // Environment specific
    "TenantId": "common"
  }
}
