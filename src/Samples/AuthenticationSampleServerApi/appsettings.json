{
  "AzureKeyVault": {
    "ClientId": "", // Project specific
    "TenantId": "", // Project specific
    "Uri": "", // Environment specific
    "ClientSecret": "" // Key Vault
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Diginsight.SmartCache.Externalization.ServiceBus": "Warning",
      "*.BodyLoggingHandler": "Debug"
    }
  },
  "Diginsight": {
    "Activities": {
      "ActivitySources": {
        "Experimental.*": false,
        "Microsoft.AspNetCore": true,
        "System.Net.Http": true,
        "Diginsight.*": true,
        "AuthenticationSampleServerApi": true
      },
      "LoggedActivityNames": {
        "System.Net.Http|System.Net.Http.HttpRequestOut": "Hide"
      }
    },
    "SmartCache": {
      "MaxAge": "00:05",
      //"MaxAge@...": "00:01",
      //"MaxAge@...": "00:10",
      "AbsoluteExpiration": "1",
      "SlidingExpiration": "04:00",
      "ServiceBus": {
        "ConnectionString": "", // Key Vault
        "TopicName": "smartcache-commonapi"
      }
    }
  },
  "Observability": {
    "ConsoleEnabled": true,
    "Log4NetEnabled": true
  },
  "OpenTelemetry": {
    "EnableTraces": false,
    "EnableMetrics": false,
    "AzureMonitorConnectionString": "", // Environment-specific
    "ActivitySources": [
      "Azure.Cosmos.Operation",
      "Azure.Storage.Blobs.BlobBaseClient",
      "Microsoft.AspNetCore",
      "Diginsight.*",
      "AuthenticationSampleApi"
    ],
    "Meters": [
      "AuthenticationSampleApi"
    ],
    "ExcludedHttpHosts": [
      "login.microsoftonline.com",
      ".documents.azure.com",
      ".applicationinsights.azure.com",
      ".monitor.azure.com",
      ".b2clogin.com"
    ],
    "DurationMetricTags": [
      "category_name",
      "plant_id",
      "plant_type",
      "plant_name",
      "plant_company",
      "device_type",
      "user_company"
    ]
  },
  "FeatureManagement": {
  },
  "AppSettings": {
  },
  "AllowedHosts": "*",
  "IsSwaggerEnabled": true,

  "SwaggerAuthentication": {
    "Authority": "https://login.microsoftonline.com/common/",
    "Scope": "", // Environment specific
    "WebAppClientId": "" // Environment specific
  },
